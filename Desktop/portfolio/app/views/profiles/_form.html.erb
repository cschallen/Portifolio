<%= form_for @profile, html: { multipart: true } do |f| %>
<%= f.file_field :avatar %>
<% if profile.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

  <ul>
    <% profile.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= image_tag @profile.avatar.url(:medium) %>

<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<div class="field">
  <%= f.label :email %>
  <%= f.text_field :email %>
</div>

<div class="field">
  <%= f.label :github %>
  <%= f.text_field :github %>
</div>

<div class="field">
  <%= f.label :bio %>
  <%= f.text_field :bio %>
</div>
<br>
Skills:



<%= f.fields_for :skills do |skills_form| %>
<div class="field">
  <%= skills_form.label :name %>
  <%= skills_form.text_field :name %>
</div>
<div>
  <%= skills_form.label :year %>
  <%= skills_form.text_field :year %>
</div>
<% end %>
<br>

Jobs:
