<div class="field">
  <%= jobs_form.label :name %>
  <%= jobs_form.text_field :name %>
</div>
<div class="field">
  <%= jobs_form.label :description %>
  <%= jobs_form.text_field :description %>
</div>
<div class="field">
  <%= jobs_form.label :date_start %>
  <%= jobs_form.text_field :date_start %>
</div>
<div class="field">
  <%= jobs_form.label :date_end %>
  <%= jobs_form.text_field :date_end %>
